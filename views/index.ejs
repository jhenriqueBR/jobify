<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet"> 
    <link href="css/principal.css" rel="stylesheet">
    <title>Jobify</title>
</head>
<body>
    <%- include('header') %>

    <h2>Open roles: </h2>
    <% categorias.forEach( categoria => { %>
        <div>
            <h3><%- categoria.nome %></h3>
            <% vagas.forEach( vaga => { 
                if (vaga.categoria == categoria.id) { %>
                    <ul>
                        <li><a href='vaga/<%- vaga.id %>'><%- vaga.titulo %></a></li>
                    </ul>
                <% 
                }
            }) %>
        </div>
    <% }) %>

    <br><br>
    <b><u>Usando Map com Filter</u></b><br><br>
    <% categoriasMap.forEach( categoria => { %>
        <div>
            <h3><%- categoria.nome %></h3>
            <% categoria.vagas.forEach( vaga => { %>
                <ul>
                    <li><a href='vaga/<%- vaga.id %>'><%- vaga.titulo %></a></li>
                </ul>
            <% 
            }) %>
        </div>
    <% }) %>




    <br><br>
